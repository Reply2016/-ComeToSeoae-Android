<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center">

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/no"
            android:drawableLeft="@drawable/ic_home"
            android:onClick="HomeOnClick" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorOrange"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/title"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@color/no"
            android:drawableRight="@drawable/ic_person"
            android:onClick="MyPageOnClick" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border"
            android:padding="5dp">

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="@string/lv_1"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="500px"
                android:max="100"
                android:padding="10dp"
                android:progress="40" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:text="Lv.2"
                android:textColor="@color/colorOrange"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:drawableTop="@drawable/line"
                android:padding="5dp"
                android:text="@string/level"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <Button
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="54dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button"
                android:text="@string/save_point"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:padding="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/s1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/s1" />

            <ImageView
                android:id="@+id/s2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="110dp"
                android:background="@null"
                android:src="@drawable/s2" />

            <ImageView
                android:id="@+id/s3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:background="@null"
                android:src="@drawable/s3" />

            <ImageView
                android:id="@+id/s4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/s4" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <ImageView
                android:id="@+id/s5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/s5" />

            <ImageView
                android:id="@+id/s6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="110dp"
                android:background="@null"
                android:src="@drawable/s6" />

            <ImageView
                android:id="@+id/s7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:background="@null"
                android:src="@drawable/s7" />

            <ImageView
                android:id="@+id/s8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/s8" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/s9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/s9" />

            <ImageView
                android:id="@+id/s10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="110dp"
                android:background="@null"
                android:src="@drawable/s10" />

            <ImageView
                android:id="@+id/s11"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:background="@null"
                android:src="@drawable/s11" />

            <ImageView
                android:id="@+id/s12"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/s12" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp">

            <ImageView
                android:id="@+id/s13"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/s13" />

            <ImageView
                android:id="@+id/s14"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:layout_marginLeft="110dp"
                android:background="@null"
                android:src="@drawable/s14" />

            <ImageView
                android:id="@+id/s15"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:background="@null"
                android:src="@drawable/s15" />

            <ImageView
                android:id="@+id/s16"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/s16" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/rank"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/button"
            android:onClick="RankOnClick"
            android:text="@string/ranking"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/point"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/button"
            android:onClick="PointOnClick"
            android:text="@string/use_point"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </FrameLayout>

</RelativeLayout>
