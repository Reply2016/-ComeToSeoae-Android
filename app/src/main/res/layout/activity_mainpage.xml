<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/colorBlack">

        <!-- 센터가 아님, 조정 필요-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <!-- 사용자 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.1 보라미니"
                android:textColor="@color/colorBlack"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="40dp"
                android:max="100"
                android:progress="20"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="5dp"
                android:text="Lv.2"
                android:textSize="18sp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="@color/colorYellow" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="개인 랭킹 : 3위\n총 포인트 : 2350P"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/scan"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/button"
                android:text="@string/save_point"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>

        </FrameLayout>
    </LinearLayout>

    <!-- 스탬프 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--도장들은 한번 더 layout 묶기-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/s1"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:background="@null"
                android:src="@drawable/s1" />

            <ImageView
                android:id="@+id/s2"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_toRightOf="@+id/s1"
                android:background="@null"
                android:src="@drawable/s2" />

            <ImageView
                android:id="@+id/s3"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_toRightOf="@+id/s2"
                android:background="@null"
                android:src="@drawable/s3" />

            <ImageView
                android:id="@+id/s4"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_toRightOf="@+id/s3"
                android:background="@null"
                android:src="@drawable/s4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/s5"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s1"
                android:background="@null"
                android:src="@drawable/s5" />

            <ImageView
                android:id="@+id/s6"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s1"
                android:layout_toRightOf="@+id/s5"
                android:background="@null"
                android:src="@drawable/s6" />

            <ImageView
                android:id="@+id/s7"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s1"
                android:layout_toRightOf="@+id/s6"
                android:background="@null"
                android:src="@drawable/s7" />

            <ImageView
                android:id="@+id/s8"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s1"
                android:layout_toRightOf="@+id/s7"
                android:background="@null"
                android:src="@drawable/s8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/s9"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s5"
                android:background="@null"
                android:src="@drawable/s9" />

            <ImageView
                android:id="@+id/s10"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s5"
                android:layout_toRightOf="@+id/s9"
                android:background="@null"
                android:src="@drawable/s10" />

            <ImageView
                android:id="@+id/s11"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s5"
                android:layout_toRightOf="@+id/s10"
                android:background="@null"
                android:src="@drawable/s11" />

            <ImageView
                android:id="@+id/s12"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s5"
                android:layout_toRightOf="@+id/s11"
                android:background="@null"
                android:src="@drawable/s12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/s13"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s9"
                android:background="@null"
                android:src="@drawable/s13" />

            <ImageView
                android:id="@+id/s14"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s9"
                android:layout_toRightOf="@+id/s13"
                android:background="@null"
                android:src="@drawable/s14" />

            <ImageView
                android:id="@+id/s15"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s9"
                android:layout_toRightOf="@+id/s14"
                android:background="@null"
                android:src="@drawable/s15" />

            <ImageView
                android:id="@+id/s16"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_below="@+id/s9"
                android:layout_toRightOf="@+id/s15"
                android:background="@null"
                android:src="@drawable/s16" />

        </LinearLayout>
        <!-- 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/rank"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/button"
                android:onClick="RankOnClick"
                android:text="@string/ranking"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:id="@+id/point"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rank"
                android:background="@drawable/button"
                android:onClick="PointOnClick"
                android:text="@string/use_point"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
